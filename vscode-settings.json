// Place your settings in this file to overwrite the default settings
{
  // ESLint
  // Enable coloured brackets
  "editor.bracketPairColorization.enabled": true,
  // fix any issues on save
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": "explicit"
  // },
  // Font settings
  "editor.fontFamily": "Inconsolata",
  "editor.fontSize": 17,
  // Controls if the minimap is shown
  "editor.minimap.enabled": true,
  // Controls how lines should wrap. Can be:
  //  - 'off' (disable wrapping),
  //  - 'on' (viewport wrapping),
  //  - 'wordWrapColumn' (wrap at `editor.wordWrapColumn`) or
  //  - 'bounded' (wrap at minimum of viewport and `editor.wordWrapColumn`).
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  // Automatically update extensions
  "extensions.autoUpdate": true,
  // exclude from helper
  "files.exclude": {
    "**/.cache": true,
    "**/.next": true,
    "**/bower_components": true,
    "**/cache": true,
    "**/jspm_packages": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/.cache/**": true,
    "**/cache/**": true
  },
  // Auto file update
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Enable/disable JavaScript validation.
  "javascript.validate.enable": false,
  // Prettier
  // require a config file in order to run formatting rules
  "prettier.requireConfig": true,
  // Additional folders to exclude from file search
  "search.exclude": {
    "**/.cache": true,
    "**/.next": true,
    "**/build": true,
    "**/build-server": true,
    "**/cache": true,
    "**/dist": true
  },
  // Enable/disable crash reports to be sent to Microsoft.
  "telemetry.telemetryLevel": "off",
  // Controls if a window should restore to full screen mode if it was exited in full screen mode.
  "window.restoreFullscreen": true,
  // Editor theme
  "workbench.colorTheme": "Night Owl (No Italics)",
  // Make sidebar jump to active file
  "workbench.editor.revealIfOpen": true,
  // Sidebar icon theme
  "workbench.iconTheme": "file-icons",
  "workbench.settings.editor": "json",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Prettier formatting per-language on save
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
  },
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "window.confirmBeforeClose": "keyboardOnly",
  "diffEditor.ignoreTrimWhitespace": false,
  "window.zoomLevel": -1
}
